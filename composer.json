{
    "name": "mailjet/mailjet-apiv3-php",
    "description": "PHP wrapper for the Mailjet API",
    "keywords": ["mailjet", "api", "v3", "php", "email"],
    "homepage": "https://github.com/mailjet/mailjet-apiv3-php/",
    "license": "MIT",
    "authors": [
        {
            "name": "Mailjet",
            "email": "dev@mailjet.com",
            "homepage": "https://dev.mailjet.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*",
        "symfony/http-client": "^4.3"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.0",
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.11",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Mailjet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MailjetTest\\": "test/"
        }
    },
    "scripts": {
        "cs-check": "phpcs -v -p --colors",
        "static-analysis": "phpstan analyse --verbose --level=max src/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
